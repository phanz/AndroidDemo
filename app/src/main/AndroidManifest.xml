<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".aidl.service.BinderPoolService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote" />

        <activity android:name=".aidl.client.BinderClientActivity" />
        <activity android:name=".recyclerview.activity.RecyclerViewActivity" />
        <activity android:name=".recyclerview.activity.StaggeredGridLayoutActivity" />
        <activity android:name=".recyclerview.activity.ItemDecorationActivity" />
        <activity android:name=".fragment.FragmentActivity" />
        <activity android:name=".gesture.SimpleGestureActivity" />
        <activity android:name=".customview.CustomViewActivity" />
        <activity android:name=".expandablelistview.ExpandableListViewActivity" />
        <activity android:name=".widget.WidgetActivity" />
        <activity android:name=".rxjava.RxJavaActivity" />
        <activity android:name=".permission.PermissionActivity" />
        <activity android:name=".snackbar.SnackBarActivity" />
        <activity android:name=".compoundbutton.CompoundButtonActivity" />
        <activity android:name=".simpleHScrollView.HScrollViewActivity" />
        <activity android:name=".simpleHScrollView2.HScrollView2Activity" />
        <activity android:name=".listview.ListViewActivity" />
        <activity android:name=".alarmmanager.AlarmManagerActivity" />

        <service android:name=".alarmmanager.PollingService" />

        <receiver android:name=".alarmmanager.AlertBroadcastReceiver" />

        <activity android:name=".ormlite.OrmLiteActivity" />
        <activity android:name=".swiperefresh.SwipeRefreshActivity" />
        <activity android:name=".popup.PopupActivity" />
        <activity android:name=".dialog.AlertDialogActivity" />
        <activity android:name=".background.BackgroundActivity" />
        <activity android:name=".surfaceview.SurfaceActivity" />
        <activity android:name=".canvas.CanvasActivity" />
        <activity android:name=".viewpager.ViewPagerActivity" />
        <activity
            android:name=".video.SurfaceVideoActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name=".video.VideoViewActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name=".animation.AnimationActivity"></activity>
    </application>

</manifest>