<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="61dp"
        android:orientation="horizontal"
        android:background="@drawable/faci_share_bg"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/share_wechat"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/icon_wechat"/>

        <ImageView
            android:id="@+id/share_friend"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/icon_friend"/>

        <ImageView
            android:id="@+id/share_qq"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/icon_qq"/>

        <ImageView
            android:id="@+id/share_qq_inter"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/icon_qq_inter"/>

    </LinearLayout>
</LinearLayout>

