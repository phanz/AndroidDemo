<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.ui.widgets.custom.PictureTextActivity">

        <com.example.ui.widgets.custom.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"/>

        <EditText
            android:id="@+id/edit_span_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/image_span_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <com.example.ui.widgets.custom.StaticTextPaintView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginTop="40dp" />

        <com.example.ui.widgets.custom.RoundImageViewByXfermode
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"
            app:borderRadius="30dp"
            app:type="round"/>

        <com.example.ui.widgets.custom.RoundImageViewByXfermode
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"
            app:type="circle"/>

        <com.example.ui.widgets.custom.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"
            app:borderRadius="30dp"
            app:type="round"/>

        <com.example.ui.widgets.custom.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"
            app:type="circle"/>

    </LinearLayout>

</ScrollView>
